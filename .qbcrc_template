# Template for ~/.qbcrc
#
case "$QBurlshort" in
    server1)
     # The real URL for server1
     QBurl='http://127.0.0.1:8080'.
     # The login name for server2
     QBlogin='user'
     # The password for server2
     QBpassword='adminadmin'
     # An array with additional options passed to cURL
     # QBarg=()
     # Any other presets and defined fuunctions
    server2)
     # The real URL for server2
     QBurl='https://192.168.1.10:8080'.
     # The login name for server2
     # QBlogin='admin'
     # The password for server2
     QBpassword='password'
     # Insecure https:
     QBarg=("-k")
     # Any other presets and defined fuunctions
     ;;
    server3)
     # The real URL for server3
     QBurl='https://server3.com:8181'.
     # The login name for server3
     # QBlogin='admin'
     # The password for server3
     QBpassword='nY68j6yTp'
     # https with a self-signed certificate:
     QBarg=('--cacert' '/path/to/the/cerificate/file.crt')
     # Any other pre-sets and defined fuunctions
     ;;
esac
